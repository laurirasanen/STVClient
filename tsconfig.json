{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "declaration": true,
    "outDir": "build/",
    "target": "es5",
    "module": "CommonJS"
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
